{
  "name": "Android Finance App",
  "image": "mcr.microsoft.com/devcontainers/java:17-bullseye",

  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "mathiasfrohlich.Kotlin",
        "fwcd.kotlin"
      ]
    }
  },

  "forwardPorts": [8080],

  "postCreateCommand": "bash .devcontainer/setup-android.sh",

  "remoteUser": "vscode"
}
